<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="kapana_signup" resource="default" engine="innodb" comment="Signups Table">
        <column name="signup_id" xsi:type="int" nullable="false" identity="true" unsigned="true" comment="Primary Key"/>
        <column name="name" xsi:type="varchar" length="255" nullable="false" comment="Name"/>
        <column name="signup_date" xsi:type="date" nullable="false" comment="Signup Date"/>
        <column name="created_at" xsi:type="timestamp" nullable="false" default="CURRENT_TIMESTAMP" on_update="false"
                comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="signup_id"/>
        </constraint>
    </table>

</schema>
