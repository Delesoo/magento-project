<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
         name="signup_listing"
         dataScope="signup_listing"
         label="Signups"
         sortOrder="10">

    <dataSource name="signup_listing_data_source">
        <argument name="dataProvider" xsi:type="config">
            <param name="class">Kapana\Signup\Ui\Component\Listing\DataProviders\Signup\Collection</param>
            <param name="name">signup_listing_data_source</param>
        </argument>
        <argument name="primaryFieldName" xsi:type="string">signup_id</argument>
        <argument name="dataProviderClass" xsi:type="string">
            Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider
        </argument>
    </dataSource>

    <columns name="signup_listing">
        <column name="signup_id" class="Magento\Ui\Component\Listing\Columns\Text">
            <settings>
                <filter>textRange</filter>
                <label>ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="name" class="Magento\Ui\Component\Listing\Columns\Text">
            <settings>
                <filter>text</filter>
                <label>Name</label>
            </settings>
        </column>
        <column name="signup_date" class="Magento\Ui\Component\Listing\Columns\Date">
            <settings>
                <filter>dateRange</filter>
                <label>Signup Date</label>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date">
            <settings>
                <filter>dateRange</filter>
                <label>Created At</label>
            </settings>
        </column>
    </columns>

    <settings>
        <spinner>signup_columns</spinner>
        <deps>
            <dep>signup_listing_data_source</dep>
        </deps>
    </settings>
</listing>
