<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">kapana_mysignup_listing.kapana_mysignup_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">signup_columns</item>
    </argument>
    <dataSource name="kapana_mysignup_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Kapana\MySignup\Ui\Component\DataProvider\SignupDataProvider
            </argument>
            <argument name="name" xsi:type="string">kapana_mysignup_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">signup_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="collection" xsi:type="object">Kapana\MySignup\Model\ResourceModel\Signup\Collection
            </argument>
        </argument>
    </dataSource>
    <columns name="signup_columns">
        <column name="signup_id">
            <settings>
                <filter>textRange</filter>
                <sorting>asc</sorting>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="date">
            <settings>
                <filter>dateRange</filter>
                <label translate="true">Date</label>
            </settings>
        </column>
        <column name="actions" component="Magento_Ui/js/grid/columns/actions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">signup_id</item>
                    <item name="urlEntityParam" xsi:type="string">signup_id</item>
                    <item name="actions" xsi:type="array">
                        <item name="edit" xsi:type="array">
                            <item name="href" xsi:type="url" path="signup/index/edit"/>
                            <item name="label" xsi:type="string" translate="true">Edit</item>
                        </item>
                        <item name="delete" xsi:type="array">
                            <item name="href" xsi:type="url" path="signup/index/delete"/>
                            <item name="label" xsi:type="string" translate="true">Delete</item>
                        </item>
                    </item>
                </item>
            </argument>
        </column>
    </columns>
    <listingToolbar name="listing_top">
        <paging name="listing_paging"/>
    </listingToolbar>
</listing>
