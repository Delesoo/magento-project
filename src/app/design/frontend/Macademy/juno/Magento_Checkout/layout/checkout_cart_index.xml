<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="cart.summary">
            <block class="Magento\Framework\View\Element\Template" name="store.phone.number"
                   template="Juno_Theme::phone-number.phtml" after="checkout.cart.methods">
                <arguments>
                    <argument name="phone_number_view_model" xsi:type="object">Juno\Theme\ViewModel\PhoneNumber
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
